
<form id="formCadastro" method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="Nome">Nome:</label>
                <input required="required" type="text" class="form-control" id="Nome" name="Nome" placeholder="Ex.: João" maxlength="50">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="Sobrenome">Sobrenome:</label>
                <input required="required" type="text" class="form-control" id="Sobrenome" name="Sobrenome" placeholder="Ex.: da Silva" maxlength="255">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="CPF">CPF:</label>
                <input required="required" type="text" class="form-control" id="CPF" maxlength="14" name="CPF" placeholder="Ex.: 003.892.132-41">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="Nacionalidade">Nacionalidade:</label>
                <input required="required" type="text" class="form-control" id="Nacionalidade" name="Nacionalidade" placeholder="Ex.: brasileira" maxlength="50">
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label for="CEP">CEP:</label>
                <input required="required" type="text" class="form-control" id="CEP" name="CEP" placeholder="Ex.: 01011-100" maxlength="9">
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="Estado">Estado:</label>
                <select required="required" id="Estado" class="form-control" name="Estado">
                    <option value="">Selecione</option>
                    <option value="SP">São Paulo</option>
                    <option value="PE">Pernambuco</option>
                </select>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="Cidade">Cidade:</label>
                <input required="required" type="text" class="form-control" id="Cidade" name="Cidade" maxlength="50" placeholder="Ex.: São Paulo">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label for="Logradouro">Logradouro:</label>
                <input required="required" type="text" class="form-control" id="Logradouro" name="Logradouro" placeholder="Ex.: Rua Boa Vista 253" maxlength="500">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="Email">E-mail:</label>
                <input required="required" type="text" class="form-control" id="Email" name="Email" placeholder="Ex.: email@email.com" maxlength="2079">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="Telefone">Telefone:</label>
                <input required="required" type="tel" class="form-control" id="Telefone" name="Telefone" placeholder="Ex.: (11) 2020-3030" maxlength="15">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="pull-left">
                <i class="btn btn-sm btn-light" id="btn_beneficiarios" style="border: 1px solid silver; background-color: white; font-style: normal ">Beneficiários</i>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="pull-right">
                <button type="submit" class="btn btn-sm btn-success">Salvar</button>
                @Html.ActionLink("Voltar", "Index", "Cliente", new { }, new { @class = "btn btn-sm btn-danger" })
            </div>
        </div>
    </div>


</form>



<div class="modal fade" data-backdrop="static" id="modal_beneficiarios" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Beneficiários</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="row">
                    <div class="col-lg-5 col-md-5">
                        <div class="form-group">
                            <label for="modal_beneficiarios_CPF">CPF:</label>
                            <input type="text" class="form-control" id="modal_beneficiarios_CPF" name="modal_beneficiarios_CPF" maxlength="14">
                            <span id="span_alert_bCPF" class="d-none"></span>
                        </div>
                    </div>

                    <div class="col-lg-5 col-md-5">
                        <div class="form-group">
                            <label for="modal_beneficiarios_nome">Nome:</label>
                            <input type="text" class="form-control" id="modal_beneficiarios_nome" name="modal_beneficiarios_nome" maxlength="255">
                        </div>
                    </div>

                    <div class="col-lg-2 mt-5 col-md-2">
                        <div style="margin-top:25px;">
                            <button class="btn btn-sm btn-success" id="modal_beneficiarios_incluir" style="height: 34px;">Incluir</button>
                        </div>
                    </div>
                </div>

                <div class="row">

                    <div class="col-lg-12 col-md-12">

                        <table style="width:100%" id="table_beneficiarios">
                            <tr>
                                <th style="width:35%">CPF</th>
                                <th style="width:30%">Nome</th>
                                <th style="width:35%"></th>
                            </tr>
                            @if (Model != null)
                            {
                                foreach (var i in Model.Beneficiarios)
                                {
                                    <tr data-bId="@i.Id">
                                        <td class="bCPF">@i.CPF</td>
                                        <td class="bNome">@i.Nome</td>
                                        <td>
                                            <button class="btn btn-sm btn-info modal_beneficiarios_alterar" onclick="alterar_beneficiario(this)" style="margin-right:10px;">Alterar</button>
                                            <button class="btn btn-sm btn-info modal_beneficiarios_excluir" onclick="excluir_beneficiario(this)">Excluir</button>
                                        </td>

                                    </tr>
                                }
                            }



                        </table>

                        
                    </div>        
                </div>

            </div>

            <div class="modal-footer">

                <i class="btn btn-sm btn-light" style="border: 1px solid silver; background-color: white; font-style: normal " data-dismiss="modal">Fechar</i>

            </div>

        </div>
    </div>
</div>